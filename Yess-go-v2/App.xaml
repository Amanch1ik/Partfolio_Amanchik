<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="YessGoFront.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:YessGoFront.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <converters:DateTimeToRelativeTimeConverter x:Key="DateTimeToRelativeTimeConverter"/>
            <converters:PriorityToColorConverter x:Key="PriorityToColorConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            
            <!-- глобальные ресурсы по желанию -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
